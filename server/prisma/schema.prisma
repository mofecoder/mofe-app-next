datasource db {
  provider = "mysql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
    TEMPORARY
    USER
    ADMIN
}

enum ContestManagerType {
    OWNER
    MANAGER
    WRITER
    TESTER
}

model User {
  id Int @id @default(autoincrement())
  uid String @unique
  role Role @default(USER)
  userName String? @unique
  email String
  atcoderId String?
  ownedContests ContestManager[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contest {
  id Int @id @default(autoincrement())
  slug String @unique
  name String
  description String
  kind String
  penaltyTime Int @default(0)
  managers ContestManager[]
  startAt DateTime
  endAt DateTime?
  publishAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContestManager {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  contest Contest @relation(fields: [contestId], references: [id])
  contestId Int
  type ContestManagerType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, contestId])
}


model Task {
  id    Int     @id @default(autoincrement())
  label String
  done  Boolean @default(false)
}
